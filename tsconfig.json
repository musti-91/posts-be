{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES6",
    "paths": {
      "*": ["node_modules/", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
